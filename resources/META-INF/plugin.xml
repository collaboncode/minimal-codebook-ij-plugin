<idea-plugin url="https://codingchapters.com"
             xmlns:xi="http://www.w3.org/2001/XInclude"
             require-restart="false">
    <id>com.codingchapters.main</id>
    <name>CodeBook</name>
    <version>2025.1.27</version>
    <vendor url="https://codingchapters.com">CodingChapters</vendor>
    <description>
        <![CDATA[
        CodingChapters Plugin provides a interactive way to browse
        technical presentations
      ]]>
    </description>
    <idea-version since-build="251.26927" until-build="251.*"/>

    <depends>com.intellij.modules.java</depends>
    <depends>org.intellij.scala</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="TimeWindow" 
                    secondary="true" 
                    anchor="right" 
                    factoryClass="com.codingchapters.tooling.TimeToolWindowFactory"/>
    </extensions>

    <actions>
        <!-- Actions are now handled within the tool window toolbar -->
    </actions>

</idea-plugin>
