<idea-plugin url="https://codingchapters.com"
             xmlns:xi="http://www.w3.org/2001/XInclude"
             require-restart="false">
    <id>com.codingchapters.main</id>
    <name>CodeBook</name>
    <version>2025.1.27</version>
    <vendor url="https://codingchapters.com">CodingChapters</vendor>
    <description>
        <![CDATA[
        CodingChapters Plugin provides a interactive way to browse
        technical presentations
      ]]>
    </description>
    <idea-version since-build="251.26927" until-build="251.*"/>

    <depends>com.intellij.modules.java</depends>
    <depends>org.intellij.scala</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="TimeWindow" 
                    secondary="true" 
                    anchor="right" 
                    factoryClass="com.codingchapters.tooling.TimeToolWindowFactory"/>
    </extensions>

    <actions>
        <group id="TimeToolsGroup" class="com.codingchapters.tooling.DummyActionGroup" text="Time Tools" description="Time related tools">
            <add-to-group group-id="MainToolBar" anchor="last"/>
            <action class="com.codingchapters.tooling.DummyAction" text="Show Current Time" id="DummyActionId" description="Display current time in browser window" icon="AllIcons.General.Calendar"/>
        </group>
    </actions>

</idea-plugin>
